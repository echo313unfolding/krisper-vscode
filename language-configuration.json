{
    "comments": {
        "lineComment": "//",
        "blockComment": ["/*", "*/"]
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
    "folding": {
        "markers": {
            "start": "^\\s*(when|if|while|for)\\s+.*:$",
            "end": "^\\s*$"
        }
    },
    "indentationRules": {
        "increaseIndentPattern": "^\\s*(when|if|while|for)\\s+.*:$",
        "decreaseIndentPattern": "^\\s*$"
    }
}